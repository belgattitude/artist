{
  "name": "artist-monorepo",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/belgattitude/artist",
  "repository": {
    "type": "git",
    "url": "https://github.com/belgattitude/artist"
  },
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "workspaces": [
    "packages/**",
    "apps/web"
  ],
  "scripts": {
    "install:strapi": "cd apps/strapi && yarn install",
    "g:clean": "yarn clean:global-cache && yarn workspaces foreach run clean",
    "g:build": "yarn -r build",
    "g:build-changed": "pnpm -r -F '...[origin/main]' build",
    "g:test-unit": "yarn workspaces foreach run test-unit",
    "g:test-e2e": "yarn workspaces foreach run test-e2e",
    "g:lint": "yarn workspaces foreach run lint",
    "g:lint-styles": "yarn workspaces foreach run lint-styles --color",
    "g:typecheck": "yarn workspaces foreach -ptv run typecheck",
    "g:lint-staged-files": "lint-staged --allow-empty",
    "g:fix-all-files": "yarn workspaces foreach run fix-all-files",
    "g:check-dist": "yarn workspaces foreach -pv run check-dist",
    "clean:global-cache": "rimraf ./.cache",
    "apps:build": "pnpm -F './apps/**' run build",
    "apps:clean": "pnpm -F './apps/**' run clean",
    "nuke:node_modules": "npx -y rimraf@3.0.1 '**/node_modules'",
    "deps:check": "npx -y npm-check-updates@latest --configFileName ncurc.yml --deep --mergeConfig",
    "deps:update": "npx -y npm-check-updates@latest --configFileName ncurc.yml -u --deep --mergeConfig",
    "install:playwright": "playwright install",
    "deduplicate": "pnpm dedupe",
    "docs:serve": "docsify serve ./docs",
    "postinstall": "is-ci || yarn husky install"
  },
  "dependencies": {
    "cross-env": "7.0.3"
  },
  "devDependencies": {
    "@belgattitude/eslint-config-bases": "1.21.0",
    "@changesets/changelog-github": "0.4.8",
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@types/prettier": "2.7.2",
    "@types/shell-quote": "1.7.1",
    "eslint": "8.34.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "13.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "rimraf": "4.1.2",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.0.0-rc.39"
}
